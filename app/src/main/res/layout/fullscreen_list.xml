<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.ShayriListActivity">

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/list_img"
        android:layout_margin="@dimen/_10sdp"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_text"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_67sdp"
            android:layout_gravity="center_vertical"
            android:background="#F16091"
            android:text="Some Text"
            android:textSize="@dimen/_25sdp">

        </TextView>


        <ImageView
            android:id="@+id/list_img2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toEndOf="@id/list_text"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/list_text"
            android:src="@mipmap/ic_launcher_round">

        </ImageView>
    </RelativeLayout>





</LinearLayout>